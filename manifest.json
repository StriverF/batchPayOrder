{
  "manifest_version": 2,
  "name": "batchPayOrder",
  "description": "auto batch pay orders",
  "version": "2.2",

  "icons": {
    "16": "image/salary_pay_icon_16.png",
    "48": "image/salary_pay_icon_48.png",
    "128": "image/salary_pay_icon_128.png"
  },

  
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "auto batch pay orders",
    "default_icon": {
      "16": "image/salary_pay_icon_16.png",
      "48": "image/salary_pay_icon_48.png",
      "128": "image/salary_pay_icon_128.png"
    },
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "https://trade.1688.com/order/*",
    "https://buyertrade.taobao.com/*",
    "https://trade.taobao.com/*",
    "https://cashiergtj.alipay.com/*",
    "https://cashierzui.alipay.com/*",
    "http://scm.interfocus.org/*"
  ],
  "optional_permissions": [
        "tabs",
        "http://www.jianshu.com/"
    ]
}
